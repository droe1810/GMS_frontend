@page
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@model WebClient.Pages.teacher.ListGradeModel

<style>
    .button-link {
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        color: white;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .button-link:hover {
            background-color: #0056b3;
            color: white;
        }
</style>

<h2>Grades for  @Model.CourseName - @Model.ClassName</h2>

@if (Model.ListGrade != null && Model.ListGrade.Count > 0)
{
    <a asp-page="/teacher/ViewGrade"
       asp-route-sessionId="@Model.SessionId"
       asp-route-className="@Model.ClassName"
       asp-route-courseName="@Model.CourseName"
       class="button-link">
        View Grade
    </a>

    <table class="table">
        <thead>
            <tr>
                <th>Grade Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var grade in Model.ListGrade)
            {
                <tr>
                    <td>
                        <a asp-page="/teacher/Graded"
                           asp-route-sessionId="@Model.SessionId"
                           asp-route-className="@Model.ClassName"
                           asp-route-courseName="@Model.CourseName"
                           asp-route-gradeId="@grade.Id"
                           asp-route-gradeName="@grade.Name"
                           title="Graded">
                            @grade.Name
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No grades available for this session.</p>
}

<a asp-page="/teacher/Index">Back</a>
